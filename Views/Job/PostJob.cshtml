@model JobRecruitmentWeb.Models.ViecLam

@{
    ViewData["Title"] = "Post Job";
}

<h2>Post a Job</h2>

<form asp-action="PostJob" method="post" class="mt-4">
    <div class="mb-3">
        <label for="TenCongViec" class="form-label">Job Title</label>
        <input type="text" id="TenCongViec" name="TenCongViec" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="MoTa" class="form-label">Description</label>
        <textarea id="MoTa" name="MoTa" class="form-control" rows="4" required></textarea>
    </div>
    <div class="mb-3">
        <label for="YeuCau" class="form-label">Requirements</label>
        <textarea id="YeuCau" name="YeuCau" class="form-control" rows="4" required></textarea>
    </div>
    <div class="mb-3">
        <label for="MucLuong" class="form-label">Salary</label>
        <input type="number" id="MucLuong" name="MucLuong" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="LoaiHinhLamViec" class="form-label">Job Type</label>
        <select id="LoaiHinhLamViec" name="LoaiHinhLamViec" class="form-select">
            <option value="Full-Time">Full-Time</option>
            <option value="Part-Time">Part-Time</option>
            <option value="Internship">Internship</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="JobCategory" class="form-label">Category</label>
        <input type="text" id="JobCategory" name="JobCategory" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="DiaChi" class="form-label">Location</label>
        <input type="text" id="DiaChi" name="DiaChi" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Post Job</button>
</form>
